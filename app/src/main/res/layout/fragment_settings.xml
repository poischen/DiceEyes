<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="acb.diceeyes.View.SettingsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/aliasTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="@string/settings_name" />

        <Spinner
            android:id="@+id/aliasContentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:entries="@array/settings_name_spinnerentries"
            android:gravity="left"
            android:prompt="@string/settings_name_hl"
            android:textAlignment="viewStart" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/startTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="@string/settings_time_start" />

        <TextView
            android:id="@+id/startTimeContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="19dp"
            android:paddingTop="7dp"
            android:text="08:00"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/endTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="@string/settings_time_end"
           />

        <TextView
            android:id="@+id/endTimeContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="19dp"
            android:paddingTop="7dp"
            android:text="20:00"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
</FrameLayout>
